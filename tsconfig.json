{
    "compilerOptions": {
      "target": "ES6",                // Target ECMAScript version
      "module": "CommonJS",             // Specify module code generation
      "outDir": "./dist",               // Output directory for compiled code
      "rootDir": "./src",               // Root directory for TypeScript files
      "strict": true,                   // Enable all strict type-checking options
      "esModuleInterop": true,          // Enable compatibility with ES module imports
      "forceConsistentCasingInFileNames": true, // Ensure file casing consistency
      "skipLibCheck": true,             // Skip checking of declaration files
      "resolveJsonModule": true,        // Allow importing JSON files
      "noImplicitAny": true,            // Disallow implicit `any` types
      "strictNullChecks": true,         // Ensure strict null checks
      "noFallthroughCasesInSwitch": true, // Prevent case fallthrough in switch statements
      "moduleResolution": "node",      // Use Node.js module resolution
      "allowSyntheticDefaultImports": true, // Allow default imports from modules without default exports
      "typeRoots": ["./node_modules/@types"], // Include type definitions
      "experimentalDecorators": true,  // Enable experimental support for decorators
      "emitDecoratorMetadata": true    // Emit metadata for decorators
    },
    "include": ["src/**/*.ts"],         // Files to include in compilation
    "exclude": ["node_modules", "dist", "**/*.test.ts"] // Files to exclude
  }
  